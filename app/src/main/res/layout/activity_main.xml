<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/soft_background">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Let's Learn ABC!"
        android:textSize="32sp"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:gravity="center"
        android:textColor="@color/primary_blue"
        android:layout_marginBottom="16dp"/>

    <!-- Speech Recognition Results -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_text_background"
        android:padding="12dp"
        android:textSize="18sp"
        android:fontFamily="casual"
        android:gravity="center"
        android:minHeight="48dp"
        android:layout_marginBottom="16dp"/>

    <!-- Image View -->
    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/currentLetterImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <!-- Letter Buttons -->
    <GridLayout
        android:id="@+id/letterGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"
        android:layout_marginBottom="16dp"
        android:alignmentMode="alignMargins">

        <Button
            android:id="@+id/buttonA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="A"
            android:onClick="onLetterClick"
            style="@style/LetterButtonStyle"/>

        <Button
            android:id="@+id/buttonB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="B"
            android:onClick="onLetterClick"
            style="@style/LetterButtonStyle"/>

        <Button
            android:id="@+id/buttonC"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="C"
            android:onClick="onLetterClick"
            style="@style/LetterButtonStyle"/>

        <Button
            android:id="@+id/buttonD"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="D"
            android:onClick="onLetterClick"
            style="@style/LetterButtonStyle"/>

        <Button
            android:id="@+id/buttonE"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="E"
            android:onClick="onLetterClick"
            style="@style/LetterButtonStyle"/>
    </GridLayout>

    <!-- Navigation and Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/nextPageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next Page â†’"
            android:onClick="onNextPageClick"
            android:layout_marginEnd="8dp"
            style="@style/ActionButtonStyle"/>

        <Button
            android:id="@+id/startRecordingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speak! ðŸŽ¤"
            android:onClick="startRecording"
            android:layout_marginStart="8dp"
            style="@style/ActionButtonStyle"/>
    </LinearLayout>

</LinearLayout>